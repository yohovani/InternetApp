<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="1dp"
            tools:layout_editor_absoluteX="1dp"
            android:background="@color/cardview_light_background">
        <ImageView
                android:paddingVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/internet"
                tools:ignore="VectorDrawableCompat">
        </ImageView>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ciber Briss Proveedores de Servicios de Internet"
                tools:text="Ciber Briss Proveedores de Servicios de Internet"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="cursive"
                android:textSize="24sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="cursive"/>

        <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>